<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArmorFragment"
    android:background="@color/colorPrimary"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvExpandListHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/head"
                android:textColor="@color/colorText"
                android:textSize="38sp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivExpandIconHead"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorButton" />

            <View
                android:id="@+id/divider29"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintBottom_toBottomOf="@+id/tvExpandListHead" />

            <GridView
                android:id="@+id/gridViewHead"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="5"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListHead" />

            <TextView
                android:id="@+id/tvExpandListChest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chest"
                android:textColor="@color/colorText"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/gridViewHead" />

            <ImageView
                android:id="@+id/ivExpandIconChest"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewHead"
                app:tint="@color/colorButton" />

            <View
                android:id="@+id/divider30"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintBottom_toBottomOf="@+id/tvExpandListChest" />

            <GridView
                android:id="@+id/gridViewChest"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="5"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListChest" />

            <TextView
                android:id="@+id/tvExpandListHands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hands"
                android:textColor="@color/colorText"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/gridViewChest" />

            <ImageView
                android:id="@+id/ivExpandIconHands"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewChest"
                app:tint="@color/colorButton" />

            <View
                android:id="@+id/divider31"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintBottom_toBottomOf="@+id/tvExpandListHands" />

            <GridView
                android:id="@+id/gridViewHands"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="5"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListHands" />


            <TextView
                android:id="@+id/tvExpandListLegs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/legs"
                android:textColor="@color/colorText"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/gridViewHands" />

            <ImageView
                android:id="@+id/ivExpandIconLegs"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewHands"
                app:tint="@color/colorButton" />

            <View
                android:id="@+id/divider32"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintBottom_toBottomOf="@+id/tvExpandListLegs" />

            <GridView
                android:id="@+id/gridViewLegs"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="5"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListLegs" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>