<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="5dp"
    tools:context=".ObjectsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvExpandListConsumables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/consumables"
                android:textColor="@color/colorTitles"
                android:textSize="38sp"
                app:layout_constraintEnd_toStartOf="@+id/ivExpandIconConsumables"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivExpandIconConsumables"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/content_description_image"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorButton"/>


            <View
                android:id="@+id/divider20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintTop_toBottomOf="@id/tvExpandListConsumables" />

            <GridView
                android:id="@+id/gridViewConsumables"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:numColumns="5"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListConsumables" />

            <TextView
                android:id="@+id/tvExpandListAmmo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ammo"
                android:textColor="@color/colorTitles"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/gridViewConsumables" />

            <ImageView
                android:id="@+id/ivExpandIconAmmo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/content_description_image"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewConsumables"
                app:tint="@color/colorButton" />


            <View
                android:id="@+id/divider21"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintTop_toBottomOf="@id/tvExpandListAmmo" />

            <GridView
                android:id="@+id/gridViewAmmo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:numColumns="5"
                android:visibility="gone"
                android:nestedScrollingEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListAmmo" />

            <TextView
                android:id="@+id/tvExpandListMultiplayerItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/multiplayer_items"
                android:textColor="@color/colorTitles"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/gridViewAmmo" />

            <ImageView
                android:id="@+id/ivExpandIconMultiplayerItems"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/content_description_image"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewAmmo"
                app:tint="@color/colorButton" />


            <View
                android:id="@+id/divider22"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintTop_toBottomOf="@id/tvExpandListMultiplayerItems" />

            <GridView
                android:id="@+id/gridViewMultiplayerItems"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:numColumns="5"
                android:visibility="gone"
                android:nestedScrollingEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListMultiplayerItems" />

            <TextView
                android:id="@+id/tvExpandListKeys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keys"
                android:textColor="@color/colorTitles"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/gridViewMultiplayerItems" />

            <ImageView
                android:id="@+id/ivExpandIconKeys"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/content_description_image"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewMultiplayerItems"
                app:tint="@color/colorButton" />


            <View
                android:id="@+id/divider23"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintTop_toBottomOf="@id/tvExpandListKeys" />

            <GridView
                android:id="@+id/gridViewKeys"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:numColumns="5"
                android:visibility="gone"
                android:nestedScrollingEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListKeys" />

            <TextView
                android:id="@+id/tvExpandListUpgradeMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upgrade_materials"
                android:textColor="@color/colorTitles"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/gridViewKeys" />

            <ImageView
                android:id="@+id/ivExpandIconUpgradeMaterial"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/content_description_image"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewKeys"
                app:tint="@color/colorButton" />


            <View
                android:id="@+id/divider24"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintTop_toBottomOf="@id/tvExpandListUpgradeMaterial" />

            <GridView
                android:id="@+id/gridViewUpgradeMaterial"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:numColumns="5"
                android:visibility="gone"
                android:nestedScrollingEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListUpgradeMaterial" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>