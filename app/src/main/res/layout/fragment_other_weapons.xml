                android:textColor="@color/colorTitles"
                android:textSize="38sp"
                app:layout_constraintEnd_toStartOf="@+id/ivExpandIconFists"
                app:layout_constraintTop_toBottomOf="@+id/gridViewStaves" />

            <ImageView
                android:id="@+id/ivExpandIconFists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/content_description_image"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewStaves"
                app:tint="@color/colorButton" />

