<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".OtherWeaponsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvExpandListStaves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/staves"
                android:textColor="@color/colorTitles"
                android:textSize="38sp"
                app:layout_constraintEnd_toStartOf="@+id/ivExpandIconStaves"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivExpandIconStaves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/content_description_image"
                android:src="@drawable/ic_expand_more_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorButton" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorButton"
                app:layout_constraintBottom_toBottomOf="@+id/tvExpandListStaves" />

            <GridView
                android:id="@+id/gridViewStaves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="6"
                android:visibility="gone"
                android:nestedScrollingEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/tvExpandListStaves" />

            <TextView
                android:id="@+id/tvExpandListFistClaws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
