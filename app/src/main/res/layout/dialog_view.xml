                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIconFireBonusFireDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_image"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tvIconFireBonusFireDef"
                android:textColor="@color/colorText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
            <ImageView
                android:id="@+id/ivIconWpStabilityPetrifyDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_image"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tvIconWpStabilityPetrifyDef"
                android:layout_width="wrap_content"
                android:textColor="@color/colorText"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIconLightningBonusLightningDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_image"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tvIconLightningBonusLightningDef"
                android:textColor="@color/colorText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
            <ImageView
                android:id="@+id/ivIconDurabilityCurseDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_image"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/tvIconDurabilityCurseDef"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIconDarkBonusDarkDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_image"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tvIconDarkBonusDarkDef"
                android:textColor="@color/colorText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
            <ImageView
                android:id="@+id/ivIconWeightDurability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_image"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tvIconWeightDurability"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIconWpStability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_image"
